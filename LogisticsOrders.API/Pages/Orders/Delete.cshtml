@page "{id:int}"
@model LogisticsOrders.API.Pages.Orders.DeleteModel

<h2>Eliminar Orden</h2>

<div class="alert alert-warning">
    ¿Está seguro que desea eliminar la orden del cliente <strong>@Model.ClientName</strong>?
</div>

<form method="post" onsubmit="return confirm('¿Está seguro que desea eliminar esta orden?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="ByClient" asp-route-ClientName="@Model.ClientName" class="btn btn-secondary">Cancelar</a>
</form>

@if (Model.Order != null)
{
    <a asp-page="ByClient" asp-route-ClientName="@Model.Order.Client" class="btn btn-secondary">Volver</a>
}