@page "{id:int}"
@model LogisticsOrders.API.Pages.Orders.EditModel

<h2>Editar Orden</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label asp-for="Order.Client" class="form-label">Cliente (nombre del cliente)</label>
        <input asp-for="Order.Client" class="form-control" />
        <span asp-validation-for="Order.Client" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.Product" class="form-label">Producto (nombre del producto)</label>
        <input asp-for="Order.Product" class="form-control" />
        <span asp-validation-for="Order.Product" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.Quantity" class="form-label">Cantidad (número de unidades)</label>
        <input asp-for="Order.Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Order.Quantity" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.OriginLat" class="form-label">Latitud de Origen</label>
        <input asp-for="Order.OriginLat" class="form-control" type="number" step="any" />
        <span asp-validation-for="Order.OriginLat" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.OriginLng" class="form-label">Longitud de Origen</label>
        <input asp-for="Order.OriginLng" class="form-control" type="number" step="any" />
        <span asp-validation-for="Order.OriginLng" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.DestLat" class="form-label">Latitud de Destino</label>
        <input asp-for="Order.DestLat" class="form-control" type="number" step="any" />
        <span asp-validation-for="Order.DestLat" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Order.DestLng" class="form-label">Longitud de Destino</label>
        <input asp-for="Order.DestLng" class="form-control" type="number" step="any" />
        <span asp-validation-for="Order.DestLng" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<a asp-page="ByClient" asp-route-ClientName="@Model.Order.Client" class="btn btn-secondary">Volver</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}