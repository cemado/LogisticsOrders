@page "{id:int}"
@model LogisticsOrders.API.Pages.Orders.DetailsModel

<h2>Detalle de Orden</h2>

@if (Model.Order != null)
{
    <dl class="row">
        <dt class="col-sm-2">Cliente (nombre del cliente)</dt>
        <dd class="col-sm-10">@Model.Order.Client</dd>
        <dt class="col-sm-2">Producto (nombre del producto)</dt>
        <dd class="col-sm-10">@Model.Order.Product</dd>
        <dt class="col-sm-2">Cantidad (número de unidades)</dt>
        <dd class="col-sm-10">@Model.Order.Quantity</dd>
        <dt class="col-sm-2">Origen (latitud, longitud)</dt>
        <dd class="col-sm-10">@($"{Model.Order.Origin.Latitude}, {Model.Order.Origin.Longitude}")</dd>
        <dt class="col-sm-2">Destino (latitud, longitud)</dt>
        <dd class="col-sm-10">@($"{Model.Order.Destination.Latitude}, {Model.Order.Destination.Longitude}")</dd>
        <dt class="col-sm-2">Distancia (km)</dt>
        <dd class="col-sm-10">@Model.Order.DistanceKm.ToString("F2")</dd>
        <dt class="col-sm-2">Costo estimado (USD)</dt>
        <dd class="col-sm-10">@Model.Order.EstimatedCost.ToString("C")</dd>
        <dt class="col-sm-2">Fecha de creación</dt>
        <dd class="col-sm-10">@Model.Order.CreatedAt.ToString("g")</dd>
    </dl>
    <a asp-page="Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary">Editar</a>
    <a asp-page="Delete" asp-route-id="@Model.Order.Id" class="btn btn-danger">Eliminar</a>
    <a asp-page="ByClient" asp-route-ClientName="@Model.Order.Client" class="btn btn-secondary">Volver</a>
}
else
{
    <div class="alert alert-warning">Orden no encontrada.</div>
}